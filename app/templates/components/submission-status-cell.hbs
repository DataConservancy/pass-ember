<style>
  .fas {
    font-size: 0.8em;
    opacity: 0.9;
    width: 15%;
  }
  .not-started>.fa-circle {
    color: #c8ced3;
  }
  .Complete>.fa-circle, .Complete .fa-info-circle{
    color: #4dbd74;
  }
  .See.details>.fa-circle {
    color: #ffc107;
  }
  .stalled>.fa-circle {
    color: #f86c6b;
  }
</style>

<div class="text-left">
  <span class="status {{status}} pr-1">
    {{#if (eq status "Complete")}}<i class="fas fa-circle"></i> {{status}}{{/if}}
    {{#if (eq status "Manuscript expected")}}<i class="fas fa-circle"></i> {{status}}{{/if}}
    {{#if (eq status "Submitted")}}<i class="fas fa-circle"></i> {{status}}{{/if}}
    {{#if (eq status "See details")}}
      {{#link-to "submissions.detal" record.id}}
        <i class="fas fa-circle"></i> {{status}}
      {{/link-to}}
    {{/if}}
  </span>
</div>
