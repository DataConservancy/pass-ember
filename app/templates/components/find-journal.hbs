<!-- triggerClass param doesn't appear to work, this is a workaround-->
{{#if (eq journalClass 'is-invalid')}}
  <style>
  .ember-power-select-trigger {
    border-color: #f86c6b;
  }
  </style>
{{/if}}
{{#if (eq journalClass 'is-valid')}}
  <style>
  .ember-power-select-trigger {
    border-color: #aaaaaa;
  }
  </style>
{{/if}}

<PowerSelect
  @search={{action "searchJournals"}}
  @selected={{@value}}
  @placeholder="Journal"
  @onchange={{action "onSelect"}} as |journal|
>
  {{get journal 'journalName'}}
</PowerSelect>