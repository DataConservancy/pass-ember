{{yield}}
<p>
    If the manuscript/article you are submitting has been assigned a Digital
    Object Identifier (DOI), please provide it now. We will use it to help
    pre-populate submission forms from the metadata extracted from the DOI. <b>If you publication has not been given a DOI, please leave DOI field blank.</b>
</p>
<div class="form-group">
  <label>DOI:</label>
  {{!-- <div style="color:red"><div style="font-style: italic">no pmc:</div>10.1103/PhysRevFluids.1.073604</div>
  <div style="color:red"><div style="font-style: italic">method A:</div>10.1021/acsmedchemlett.7b00397</div>
  <div style="color:red"><div style="font-style: italic">method B:</div>10.1039/c7fo01251a</div> --}}
  {{input
    class=validDOI
    value=model.publication.doi
    keyUp=(action "lookupDOI")
    id="doi"
    placeholder="DOI"
  }}
  <div class="text-danger">
    {{if (eq validDOI 2) 'Please provide a valid DOI'}}
  </div>
</div>
<div class="form-group">
  <label>Title: <span class="text-muted">(required)</span></label>
  {{textarea value=model.publication.title cols="100%" rows="2" class=validTitle placeholder="Title" keyUp=(action "validateTitle") id="title" }}
</div>

<div class="form-group">
  <label>Journal: <span class="text-muted">(required)</span></label>
  {{#unless doiJournal}}
    {{find-journal id="journal" selectJournal=(action "selectJournal") value=model.publication.journal}}
  {{else}}
    <input type="text" class="form-control" value={{model.publication.journal}}  placeholder="Journal"/>
  {{/unless}}
</div>

{{#link-to 'submissions.index' class="btn btn-outline-primary"}}Back{{/link-to}}
<button class="btn btn-primary pull-right next" {{action "validateNext"}}>Next</button>
