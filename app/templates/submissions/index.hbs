<div class="row mt-3 mb-3">
  <div class="col-6">
    <h1 class="font-weight-light pt-1">Your Submissions</h1>
  </div>
  <div class="col-6">
    {{#if (get (await currentUser.user) 'isSubmitter')}}
      {{#link-to "submissions.new" (query-params grant=null submission=null) class="btn btn-primary btn-small pull-right"}}Create new submission{{/link-to}}
    {{/if}}
  </div>
</div>
<div class="row">
  <div class="col-12" style="overflow-x: auto;">
    <div class="submission-table">
    {{models-table
      data=model
      columns=columns
      themeInstance=themeInstance
      showColumnsDropdown=false
      useFilteringByColumns=false
      filteringIgnoreCase=true
      multipleColumnsSorting=false
      authorSelected='authorclick'
      pageSize=tablePageSize
      pageSizeValues=tablePageSizeValues
    }}
    </div>
  </div>
</div>
{{#message-dialog show=messageShow to=messageTo subject=messageSubject message=messageText}}
{{/message-dialog}}
