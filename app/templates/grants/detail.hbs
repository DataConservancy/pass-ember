<div class="row mt-3 mb-3">
  <div class="col-6 pt-1">
    {{#link-to 'grants' class="btn btn-small back-arrow"}}<i class="fa fa-arrow-left fa-lg"></i>{{/link-to}}
    <h2 class="font-weight-light d-inline-block">Grant Details</h2>
  </div>
  <div class="col-6">
    {{#if (get (await currentUser.user) 'isSubmitter')}}
      {{#link-to "submissions.new" (query-params grant=grant.id) class="btn btn-primary btn-small pull-right"}}Create new submission{{/link-to}}
    {{/if}}
  </div>
</div>
<div class='grant-details'>
  <div class='row'>
    <ul class='col-sm-6'>
      <li><strong>Project Name:</strong> {{grant.projectName}}</li>
      <li><strong>Award Number:</strong> {{grant.awardNumber}}</li>
      <li><strong>Funder:</strong> {{grant.primaryFunder.name}}</li>
      <li><strong>Start:</strong> {{format-date grant.startDate }}</li>
      <li><strong>End:</strong> {{format-date grant.endDate}}</li>
    </ul>
    <ul class='col-sm-6'>
      <li><strong>Status:</strong> {{grant.awardStatus}}</li>
      <li><strong>PI:</strong> {{grant.pi.displayName}}</li>
      <li><strong>Co-PI(s) / Co-I(s):</strong>
        <ul>
          {{#each grant.coPis as |person index|}}{{#if index}}, {{/if}}{{person.displayName}}{{/each}}
        </ul>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-12" style="overflow-x: auto;">
    <h3 class="font-weight-light">Submissions for grant</h3>
    <div class="submission-table">
      {{models-table
        data=model.submissions
        columns=columns
        themeInstance=themeInstance
        showColumnsDropdown=false
        filteringIgnoreCase=true
        multipleColumnsSorting=false
        useFilteringByColumns=false
        showGlobalFilter=false
      }}
    </div>
  </div>
</div>
